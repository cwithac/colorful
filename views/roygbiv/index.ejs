<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body class="container">
    <h1>Colors</h1>
    <nav>
      <% include ../partials/nav.ejs %>
    </nav>
    <main>
    <ul>
        <% for(let i = 0; i < colors.length; i++){ %>
            <div style="background-color:<%=colors[i].hex%>" class="color-family">
                <a href="/roygbiv/<%=colors[i]._id%>">
                  <%=colors[i].name%>
                </a>
            </div>
        <% } %>
    </ul>
</main>
  </body>
</html>
