<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <h1>ROYGBIV</h1>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/roygbiv/create">Create a New ROYGBIV</a></li>
      </ul>
    </nav>
    <main>
    <h2>List of Colors</h2>
    <ul>
        <% for(let i = 0; i < colors.length; i++){ %>
            <li>
                <a style="background-color:<%=colors[i].hex%>" href="/roygbiv/<%=colors[i]._id%>">
                  <%=colors[i].name%>
                </a>
            </li>
        <% } %>
    </ul>
</main>
  </body>
</html>
